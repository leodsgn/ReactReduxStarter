.header
    width: 100%
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    padding: 0
    margin: 0
    background-color: #ffffff
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5)

    .navigation
        display: flex
        flex-direction: row

        .nav-item
            list-style: none
            padding: 20px
            margin: 0 10px

            &:first-child
                margin-left: 0

            &:last-child
                margin-right: 0
